<style>
  
  .landing-page .darken-bg {
    background: rgba(0, 0, 0, 0.45);
  }

  .landing-page .caption-content h1,
  .landing-page .caption-content.testimonial-text p.headline {
    font-family: neuzeitgroteskblack;
    line-height: normal;
  }

  /* Override poorly scoped CSS rule for images in style.css */
  .landing-page .image-element__wrap img[data-sizes=auto].lazyloaded {
    width: 100%;
    
    height: auto !important; /* !important for precedence */
    margin-bottom: 0;
  }

  .landing-page .product_section.container {
    justify-content: center;
    background-color: #f1f2f2;
  }

  .landing-page.text-banner h2 {
    margin-top: 1.5em;
    margin-bottom: 0.25em;
  }
  h2.product_name,
  .shopify-section--text-columns-with-images h2.title{
    font-size: 40px;
    text-transform: uppercase;
    line-height: 1;
  }
  .image-with-text-container {
    flex-direction: row-reverse;
  }
  .featured-link--half .collection_title {
    font-size: 40px;
    text-transform: uppercase;
    color:#3e8df5;
    line-height: 1;    
  }
   .featured-link--half .collection_title,
  .section.faq h2,
  .shopify-section--text-columns-with-images h2.title{
    font-family: neuzeitgroteskblack;
  }
  .section.faq .container {
    max-width: 100%;
  }
  .faqAccordion > dt > button {
    font-family: 'neuzeit_grotesk_regular';
    color: black;
    font-weight: 500;
  }
   .faqAccordion > dt > button::after {
     color:#3e8df5;
   }
  .section.faq a.button {
    border-color: #3e8df5;
    border-radius: 6px;
    text-transform: uppercase;
  }
  @media screen and (max-width: 767px) {
    .shopify-section--featured-product .product__details {
      padding-top:0px;
    }
    .product_section .modal_price {
     flex: 0 0 100%;
    }
    body:not([data-template=primary]) .product-block.product-block--price {
      position: relative;
      justify-content: start;
      top: initial;
      right: initial;
    }
    body:not([data-template=primary]) .product_section .modal_price {
          justify-content: start;
    }
    .price-note {
      text-align: left;
    }
  }
  @media screen and (min-width: 768px) {
    .shopify-section--featured-product .product__details {
      width: 500px;
      max-width: 50%;
    }
  }
</style>

<script>
  window.addEventListener('DOMContentLoaded', function(event) {
    function handleShopLinkClickEvent(event) {
      event.preventDefault();
      var productSection = document.querySelector('.landing-page .product-main');
      if (productSection) {
        productSection.scrollIntoView({ behavior: 'smooth' });
      }
    }
  
    function init() {
      var shopLinks = document.querySelectorAll('.landing-page.shop-link a');
      console.log(shopLinks.length);
      shopLinks.forEach(function(link) {
        link.addEventListener('click', handleShopLinkClickEvent)
      });
    }
  
    function unload() {
      var shopLinks = document.querySelectorAll('.landing-page.shop-link a');
      shopLinks.forEach(function(link) {
        link.removeEventListener('click', handleShopLinkClickEvent)
      });
    }

    if (Shopify.designMode) {
      document.addEventListener('shopify:section:load', init);
      document.addEventListener('shopify:section:unload', unload);
    }

    init();
  });
</script>

