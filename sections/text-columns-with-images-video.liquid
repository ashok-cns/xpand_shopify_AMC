            "id": "sec_heading_align_text",
            "label": "Heading text alignment",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "center",
                "label": "Center"
              }, {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
        "type": "checkbox",
        "id": "text_as_overlay",
        "label": "Show text as an overlay",
        "default": false
      },{
        "type": "header",
        "content": "Advanced"
      }, {
        "type": "paragraph",
        "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
      }, {
        "type": "color",
        "id": "sec_bg",
        "label": "Section background color"
      }, {
        "type": "text",
        "id": "css_class",
        "label": "CSS Class"
      }, {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS"
      }, {
        "type": "header",
        "content": "Spacing"
      }, {
